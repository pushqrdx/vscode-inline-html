{
	"name": "inline-html",
	"displayName": "Inline HTML",
	"description": "Intellisense, Emmet and Syntax Highlighting for html/css inside ES6 Template Strings.",
	"version": "0.2.0",
	"publisher": "pushqrdx",
	"license": "MIT",
	"icon": "docs/logo.png",
	"preview": true,
	"bugs": {
		"url": "https://github.com/pushqrdx/vscode-inline-html/issues"
	},
	"keywords": [
		"html",
		"template",
		"polymer",
		"lit-html"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/pushqrdx/vscode-inline-html"
	},
	"engines": {
		"vscode": "^1.5.0"
	},
	"galleryBanner": {
		"color": "#0E0F15",
		"theme": "dark"
	},
	"scripts": {
		"compile": "./node_modules/.bin/tsc -p .",
		"watch:compile": "./node_modules/.bin/tsc --watch -p .",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:typescript",
		"onLanguage:javascript"
	],
	"main": "./client/main",
	"contributes": {
		"grammars": [
			{
				"injectTo": [
					"source.js",
					"source.js.jsx",
					"source.jsx",
					"source.ts",
					"source.tsx"
				],
				"scopeName": "es6.inline.html",
				"path": "./syntaxes/es6.inline.html.json",
				"embeddedLanguages": {
					"meta.embedded.block.html": "html",
					"meta.template.expression.ts": "typescript"
				}
			},
			{
				"injectTo": [
					"source.js",
					"source.js.jsx",
					"source.jsx",
					"source.ts",
					"source.tsx"
				],
				"scopeName": "es6.inline.css",
				"path": "./syntaxes/es6.inline.css.json",
				"embeddedLanguages": {
					"meta.embedded.block.css": "css",
					"meta.template.expression.ts": "typescript"
				}
			}
		]
	},
	"devDependencies": {
		"vscode-languageserver-types": "^3.6.0",
		"@types/node": "7.0.43",
		"vscode": "^1.1.10",
		"typescript": "^3.2.2"
	},
	"dependencies": {
		"vscode-css-languageservice": "^3.0.7",
		"vscode-emmet-helper": "^1.2.0",
		"vscode-html-languageservice": "^2.1.1"
	}
}
